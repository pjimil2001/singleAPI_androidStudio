        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="first"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="last"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp" />

    <TextView
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
